@page
@model CreateModel

<h5 class="bg-primary text-white text-center p-2">Create User</h5>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>User Name</label>
        <input name="UserName" class="form-control" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="Password" class="form-control" value="@Model.Password" />
    </div>
    <div class="form-group">
        <label>Major</label>
        <input name="Major" class="form-control" value="@Model.Major" />
    </div>
    <div class="form-group">
        <label>Admission Year</label>
        <input type="number" name="AdmissionYear" class="form-control" value="@Model.AdmissionYear" />
    </div>

    <div class="py-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-page="list">Back</a>
    </div>
</form>

@functions {
    public class CreateModel : AdminPageModel
    {
        public UserManager<StudentUser> UserManager;
        public CreateModel(UserManager<StudentUser> usrManager)
        {
            UserManager = usrManager;
        }

        [BindProperty]
        public string UserName { get; set; } = string.Empty;

        [BindProperty]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [BindProperty]
        public string Password { get; set; } = string.Empty;

        [BindProperty]
        public string Major { get; set; } = string.Empty;

        [BindProperty]
        public short AdmissionYear { get; set; } = default(int);

        public async Task<IActionResult> OnPostAsync()
        {
            if (ModelState.IsValid)
            {
                var studentUser = new StudentUser
                    {
                        UserName = UserName,
                        Email = Email,
                        Major = Major,
                        AdmissionYear = AdmissionYear
                    };

                IdentityResult result = await UserManager.CreateAsync(studentUser, Password);

                if (result.Succeeded)
                {
                    return RedirectToPage("List");
                }
                foreach (IdentityError err in result.Errors)
                {
                    ModelState.AddModelError("", err.Description);
                }
            }
            return Page();
        }
    }
}