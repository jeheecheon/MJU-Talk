@page
@model ListModel

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Major</th>

        <th></th>
    </tr>
    @if (Model.Users.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center">No User Accounts</td>
        </tr>
    }
    else
    {
        foreach (StudentUser user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Major</td>

                <td class="text-center">
                    <form asp-page="List" method="post">
                        <input type="hidden" name="Id" value="@user.Id" />
                        <a class="btn btn-sm btn-warning" asp-page="Editor" asp-route-id="@user.Id"
                            asp-route-mode="edit">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-page="create">Create</a>

@functions {
    public class ListModel : AdminPageModel
    {
        public UserManager<StudentUser> UserManager;

        public ListModel(UserManager<StudentUser> userManager)
        {
            UserManager = userManager;
        }

        public IEnumerable<StudentUser> Users { get; set; } = Enumerable.Empty<StudentUser>(); public void OnGet()
        {
            Users = UserManager.Users;
        }
    }
}